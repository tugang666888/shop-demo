.my-search-container {
  height: 50px;
  background-color: #c00000;
  display: flex;
  align-items: center;
  padding: 0 10px;
}
.my-search-container .my-search-box {
  height: 36px;
  background-color: #fff;
  border-radius: 18px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-search-container .my-search-box .placeholder {
  font-size: 15px;
  margin-left: 5px;
}
